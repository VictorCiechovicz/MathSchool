<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NavBar">

    <View
        android:id="@+id/shape_nav"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        style="@style/ContainerComponentsNavBar"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"

        />

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageprofile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedro"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintStart_toEndOf="@id/image_profile"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/text_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silva"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@id/image_profile"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toBottomOf="@id/text_firstName"

        />

    <View
        android:id="@+id/line_navbar"
        android:layout_width="133dp"
        android:layout_height="0.5dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_lastName"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"

       />


    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconhome"

        app:layout_constraintTop_toBottomOf="@id/line_navbar"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NavBarHome"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/line_navbar"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toEndOf="@id/icon_home"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconprofile"

        app:layout_constraintTop_toBottomOf="@id/icon_home"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NavBarProfile"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/text_home"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_profile"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/icon_roadmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconroadmap"

        app:layout_constraintTop_toBottomOf="@id/icon_profile"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_roadmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NavBarRoadmap"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/text_profile"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/icon_profile"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/icon_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconsettings"

        app:layout_constraintTop_toBottomOf="@id/icon_roadmap"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NavBarSettings"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@id/text_roadmap"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/icon_profile"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/icon_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconlogout"

        app:layout_constraintBottom_toBottomOf="@id/shape_nav"
        android:layout_marginBottom="31dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NavBarSettings"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/primary_dark"

        app:layout_constraintBottom_toBottomOf="@id/shape_nav"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toEndOf="@id/icon_logout"
        android:layout_marginLeft="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>